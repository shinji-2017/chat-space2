.message{data:{id:message.id}}
  .message__user__info
    %p.message__user__info__name
      = message.user.name
    %p.message__user__info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.messages__text
    - if message.content.present?
      = message.content
  = image_tag message.image.url , size: "200x200" if message.image.present? 